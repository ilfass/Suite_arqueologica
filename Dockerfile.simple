# ============================================================================
# DOCKERFILE SIMPLIFICADO - SOLO BACKEND
# ============================================================================

# Etapa 1: Construcci贸n del Backend
FROM node:18-alpine AS backend-builder

WORKDIR /app

# Copiar archivos del backend
COPY backend/package*.json ./backend/
COPY backend/tsconfig.json ./backend/

# Instalar dependencias del backend (incluyendo dev para build)
RUN cd backend && npm install

# Copiar c贸digo fuente del backend
COPY backend/src ./backend/src

# Construir backend
RUN cd backend && npm run build

# Etapa 2: Imagen de producci贸n
FROM node:18-alpine AS production

# Instalar dependencias del sistema
RUN apk add --no-cache dumb-init

# Crear usuario no-root
RUN addgroup -g 1001 -S nodejs
RUN adduser -S nextjs -u 1001

# Crear directorios de trabajo
WORKDIR /app

# Copiar archivos del backend
COPY --from=backend-builder --chown=nextjs:nodejs /app/backend/dist ./backend/dist
COPY --from=backend-builder --chown=nextjs:nodejs /app/backend/package*.json ./backend/

# Instalar dependencias de producci贸n
RUN cd backend && npm install --omit=dev

# Crear directorio de logs
RUN mkdir -p /var/log/suite-arqueologica && chown nextjs:nodejs /var/log/suite-arqueologica

# Script de inicio simplificado
COPY docker-entrypoint-simple.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint-simple.sh

# Cambiar al usuario no-root
USER nextjs

# Exponer puerto del backend
EXPOSE 4000

# Variables de entorno por defecto
ENV NODE_ENV=production
ENV PORT=4000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:4000/api/health || exit 1

# Comando de inicio
ENTRYPOINT ["docker-entrypoint-simple.sh"] 